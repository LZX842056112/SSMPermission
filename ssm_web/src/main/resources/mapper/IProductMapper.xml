<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.IProductDao">

    <sql id="productList">
        id,productNum,productName,cityName,departureTime,productPrice,productDesc,productStatus
    </sql>

    <select id="findAll" resultType="com.itheima.domain.Product">
        select
        <include refid="productList"></include>
        from product
    </select>

</mapper>